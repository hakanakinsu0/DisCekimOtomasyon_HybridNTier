@model AppUserCreatePageVm

@{
    ViewData["Title"] = "Yeni Kullanıcı Oluştur";
}

<div class="container py-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-floating mb-3">
            <input asp-for="Request.Username" class="form-control" placeholder="Kullanıcı Adı" />
            <label asp-for="Request.Username"></label>
            <span asp-validation-for="Request.Username" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Request.Email" class="form-control" placeholder="E-Posta" />
            <label asp-for="Request.Email"></label>
            <span asp-validation-for="Request.Email" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Request.Password" type="password" class="form-control" placeholder="Şifre" />
            <label asp-for="Request.Password"></label>
            <span asp-validation-for="Request.Password" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-4">
            <input asp-for="Request.ConfirmPassword" type="password" class="form-control" placeholder="Şifre (Tekrar)" />
            <label asp-for="Request.ConfirmPassword"></label>
            <span asp-validation-for="Request.ConfirmPassword" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success">Oluştur</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
