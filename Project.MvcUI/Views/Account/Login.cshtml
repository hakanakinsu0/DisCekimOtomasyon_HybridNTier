@model LoginPageVm

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container min-vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="card-title text-center mb-4">Dış Çekim Otomasyon</h3>

                    <form asp-action="Login" method="post" novalidate>
                        <input asp-for="Request.ReturnUrl" type="hidden" />

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Request.Username" class="form-control" id="floatingUsername" placeholder="Kullanıcı Adı" />
                            <label for="floatingUsername">Kullanıcı Adı</label>
                            <span asp-validation-for="Request.Username" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Request.Password" type="password" class="form-control" id="floatingPassword" placeholder="Şifre" />
                            <label for="floatingPassword">Şifre</label>
                            <span asp-validation-for="Request.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Request.RememberMe" class="form-check-input" id="rememberMeCheck" />
                            <label asp-for="Request.RememberMe" class="form-check-label" for="rememberMeCheck"></label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary w-100">
                            Kayıt Ol
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
