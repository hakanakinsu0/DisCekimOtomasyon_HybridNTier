@model PackageExtraEditPageVm

@{
    ViewData["Title"] = "Paket Ekstra Düzenle";
}

<div class="container py-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input asp-for="Request.Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="Request.PackageOptionId" class="form-label"></label>
            <select asp-for="Request.PackageOptionId" asp-items="Model.PackageOptions" class="form-select">
                <option value="">-- Paket Seçeneği Seçin --</option>
            </select>
            <span asp-validation-for="Request.PackageOptionId" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Request.ExtraServiceId" class="form-label"></label>
            <select asp-for="Request.ExtraServiceId" asp-items="Model.ExtraServices" class="form-select">
                <option value="">-- Ekstra Hizmet Seçin --</option>
            </select>
            <span asp-validation-for="Request.ExtraServiceId" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-4">
            <input asp-for="Request.Quantity" class="form-control" placeholder="Adet" />
            <label asp-for="Request.Quantity"></label>
            <span asp-validation-for="Request.Quantity" class="text-danger small"></span>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
