@model AlbumCompanyEditPageVm

@{
    ViewData["Title"] = "Albüm Firması Düzenle";
}

<div class="container py-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input asp-for="Request.Id" type="hidden" />

        <div class="form-floating mb-3">
            <input asp-for="Request.Name" class="form-control" placeholder="Firma Adı" />
            <label asp-for="Request.Name"></label>
            <span asp-validation-for="Request.Name" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Request.Address" class="form-control" placeholder="Adres" />
            <label asp-for="Request.Address"></label>
            <span asp-validation-for="Request.Address" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Request.Phone" class="form-control" placeholder="Telefon" />
            <label asp-for="Request.Phone"></label>
            <span asp-validation-for="Request.Phone" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Request.Email" class="form-control" placeholder="E-posta" />
            <label asp-for="Request.Email"></label>
            <span asp-validation-for="Request.Email" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Request.ContactPersonName" class="form-control" placeholder="Yetkili Adı" />
            <label asp-for="Request.ContactPersonName"></label>
            <span asp-validation-for="Request.ContactPersonName" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Request.ContactPersonPhone" class="form-control" placeholder="Yetkili Telefon" />
            <label asp-for="Request.ContactPersonPhone"></label>
            <span asp-validation-for="Request.ContactPersonPhone" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-4">
            <input asp-for="Request.ContactPersonEmail" class="form-control" placeholder="Yetkili E-posta" />
            <label asp-for="Request.ContactPersonEmail"></label>
            <span asp-validation-for="Request.ContactPersonEmail" class="text-danger small"></span>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
