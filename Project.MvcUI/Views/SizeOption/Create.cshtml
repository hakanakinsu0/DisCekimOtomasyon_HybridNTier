@model SizeOptionCreatePageVm

@{
    ViewData["Title"] = "Yeni Ölçü Seçeneği Ekle";
}

<div class="container py-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Request.ServiceCategoryId" class="form-label"></label>
            <select asp-for="Request.ServiceCategoryId" asp-items="Model.ServiceCategories" class="form-select">
                <option value="">-- Kategori Seçin --</option>
            </select>
            <span asp-validation-for="Request.ServiceCategoryId" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-4">
            <input asp-for="Request.Dimension" class="form-control" placeholder="Dimension" />
            <label asp-for="Request.Dimension"></label>
            <span asp-validation-for="Request.Dimension" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">Kaydet</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
