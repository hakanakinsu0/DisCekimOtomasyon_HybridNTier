@model PaymentEditPageVm

@{
    ViewData["Title"] = "Ödeme Düzenle";
}

<div class="container py-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input asp-for="Request.Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="Request.ReservationId" class="form-label"></label>
            <select asp-for="Request.ReservationId" asp-items="Model.Reservations" class="form-select">
                <option value="">-- Rezervasyon Seçin --</option>
            </select>
            <span asp-validation-for="Request.ReservationId" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Request.TotalAmount" class="form-control" placeholder="Toplam Tutar" />
            <label asp-for="Request.TotalAmount"></label>
            <span asp-validation-for="Request.TotalAmount" class="text-danger small"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Request.PaidAmount" class="form-control" placeholder="Ödenen Tutar" />
            <label asp-for="Request.PaidAmount"></label>
            <span asp-validation-for="Request.PaidAmount" class="text-danger small"></span>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
