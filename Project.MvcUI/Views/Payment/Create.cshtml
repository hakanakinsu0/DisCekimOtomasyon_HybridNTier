@model PaymentCreatePageVm

<h2>Yeni Ödeme Ekle</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- Rezervasyon / Müşteri -->
    <div class="mb-3">
        <label class="form-label">Rezervasyon / Müşteri</label>
        <input type="hidden" asp-for="Request.ReservationId" />
        <input class="form-control" readonly
               value="#@Model.Request.ReservationId – @Model.CustomerName" />
    </div>

    <!-- Toplam Tutar: artık her zaman editable -->
    <div class="mb-3">
        <label asp-for="Request.TotalAmount" class="form-label">Toplam Tutar</label>
        <input asp-for="Request.TotalAmount" class="form-control" />
        <span asp-validation-for="Request.TotalAmount" class="text-danger"></span>
    </div>

    <!-- Kalan Bakiye -->
    <div class="mb-3">
        <label class="form-label">Kalan Bakiye</label>
        <input class="form-control" readonly
               value="@Model.RemainingAmount.ToString("C")" />
    </div>

    <!-- Ödenmesi gereken -->
    <div class="mb-3">
        <label asp-for="Request.PaidAmount" class="form-label">Ödenecek Tutar</label>
        <input asp-for="Request.PaidAmount" class="form-control" />
        <span asp-validation-for="Request.PaidAmount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
