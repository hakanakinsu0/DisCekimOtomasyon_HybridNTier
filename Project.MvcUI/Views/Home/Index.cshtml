@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container py-5">
    <!-- Karşılama Bölümü -->
    <div class="row mb-5">
        <div class="col text-center">
            <h1 class="display-4">Dış Çekim Otomasyon</h1>
            <p class="lead text-muted">Hoş geldiniz! Yönetim paneline hızlı erişim için aşağıdaki kartları kullanabilirsiniz.</p>
        </div>
    </div>

    <!-- Hızlı Erişim Kartları -->
    <div class="row g-4">
        <div class="col-6 col-md-4 col-lg-3">
            <a asp-controller="Customer" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-people-fill fs-1 mb-3"></i>
                        <h5 class="card-title">Müşteriler</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-lg-3">
            <a asp-controller="Photographer" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-camera-fill fs-1 mb-3"></i>
                        <h5 class="card-title">Fotoğrafçılar</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-lg-3">
            <a asp-controller="Location" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-geo-alt-fill fs-1 mb-3"></i>
                        <h5 class="card-title">Mekanlar</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-lg-3">
            <a asp-controller="Reservation" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-calendar-check-fill fs-1 mb-3"></i>
                        <h5 class="card-title">Rezervasyonlar</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-lg-3">
            <a asp-controller="ExtraService" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-gear-fill fs-1 mb-3"></i>
                        <h5 class="card-title">Ekstra Hizmetler</h5>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-lg-3">
            <a asp-controller="Payment" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-credit-card-fill fs-1 mb-3"></i>
                        <h5 class="card-title">Ödemeler</h5>
                    </div>
                </div>
            </a>
        </div>
        <!-- İstersen buraya diğer modülleri de ekleyebilirsin -->
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons kullanımı için (eğer yoksa) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.js"></script>
}
