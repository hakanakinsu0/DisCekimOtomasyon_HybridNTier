@model CustomerEditPageVm

@{
    ViewData["Title"] = "Müşteri Düzenle";
}

<div class="container py-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" novalidate>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        @* Id gizli alan olarak gönderilir *@
        <input asp-for="Request.Id" type="hidden" />

        <div class="form-floating mb-3">
            <input asp-for="Request.BrideName" class="form-control" placeholder="Gelin Adı" />
            <label asp-for="Request.BrideName"></label>
            <span asp-validation-for="Request.BrideName" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Request.GroomName" class="form-control" placeholder="Damat Adı" />
            <label asp-for="Request.GroomName"></label>
            <span asp-validation-for="Request.GroomName" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Request.LastName" class="form-control" placeholder="Soyad" />
            <label asp-for="Request.LastName"></label>
            <span asp-validation-for="Request.LastName" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Request.Phone1" class="form-control" placeholder="Telefon 1" />
            <label asp-for="Request.Phone1"></label>
            <span asp-validation-for="Request.Phone1" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Request.Phone2" class="form-control" placeholder="Telefon 2" />
            <label asp-for="Request.Phone2"></label>
            <span asp-validation-for="Request.Phone2" class="text-danger small"></span>
        </div>
        <div class="form-floating mb-4">
            <input asp-for="Request.Email" class="form-control" placeholder="E-posta" />
            <label asp-for="Request.Email"></label>
            <span asp-validation-for="Request.Email" class="text-danger small"></span>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
        </div>
    </form>
</div>


